{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Compile compact file",
      "type": "shell",
      // FIXED: Flags (--vscode --skip-zk) are now BEFORE the file paths
      "command": "compact compile --vscode --skip-zk ${file} ${workspaceFolder}/src/managed",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      },
      "problemMatcher": [
        "$compactException",
        "$compactInternal",
        "$compactCommandNotFound"
      ]
    }
  ]
}